{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "index.ts",
    "src/**/*.ts"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": false,
    "strictMetadataEmit": true
  }
}